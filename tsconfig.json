{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./lib",
    "strictNullChecks": true,
    "noUnusedLocals": true,
		"skipLibCheck": true,
		"moduleResolution": "Node",
		"diagnostics": true,
		"pretty": true,
		"alwaysStrict": true
	},
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
